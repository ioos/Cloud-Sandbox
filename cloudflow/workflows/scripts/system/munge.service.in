[Unit]
Description=MUNGE authentication service
Documentation=man:munged(8)
After=network.target
After=syslog.target
After=time-sync.target

[Service]
Type=forking
ExecStart=@sbindir@/munged --key-file=/etc/munge/munge.key
User=munge
Group=munge
Restart=on-abort

[Install]
WantedBy=multi-user.target
